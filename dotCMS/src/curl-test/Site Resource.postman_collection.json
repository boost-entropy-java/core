		{
			"name": "Create new Site Complete",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code should be 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"var jsonData = pm.response.json();",
							"",
							"pm.test(\"File name check\", function () {",
							"    pm.expect(jsonData.entity.hostname).to.eql('postman.host1.com');",
							"    pm.expect(jsonData.entity.aliases).to.eql('postman.host2.com postman.host3.com');",
							"    pm.expect(jsonData.entity.map.addThis).to.eql('add-this-key');",
							"    pm.expect(jsonData.entity.map.description).to.eql('This is a postman host test 2');",
							"    pm.expect(jsonData.entity.map.embeddedDashboard).to.eql('postman.host.com/dashboard');",
							"    pm.expect(jsonData.entity.map.googleAnalytics).to.eql('google-analytics-key');",
							"    pm.expect(jsonData.entity.map.googleMap).to.eql('google-key');",
							"    pm.expect(jsonData.entity.map.proxyEditModeUrl).to.eql('proxy.postman.host.com');",
							"    pm.expect(jsonData.entity.map.runDashboard).to.eql(true);",
							"    pm.expect(jsonData.entity.map.tagStorage).to.eql('default');",
							"    pm.expect(jsonData.entity.map.hostThumbnail).to.include('250px-Bocas2.jpg');",
							"});",
							"",
							"pm.collectionVariables.set(\"hostId\", jsonData.entity.identifier);",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"hostName\":\"postman.host1x.com\",\n    \"aliases\":\"postman.host2.com postman.host3.com\",\n    \"tagStorage\":\"default\",\n    \"hostThumbnail\":\"{{temporalFileId}}\",\n    \"runDashboard\":true,\n    \"keywords\":\"key1, key2, key3\",\n    \"description\":\"This is a postman host test 2\",\n    \"googleMap\":\"google-key\",\n    \"googleAnalytics\":\"google-analytics-key\",\n    \"addThis\":\"add-this-key\",\n    \"proxyUrlForEditMode\":\"proxy.postman.host.com\",\n    \"embeddedDashboard\":\"postman.host.com/dashboard\"\n}",
					"options": {
						"raw": {
